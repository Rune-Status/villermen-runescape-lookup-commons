{
    "name": "villermen/runescape-lookup-commons",
    "description": "A PHP library containing RuneScape lookup components.",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "test": "phpunit",
        "test:static": "phpstan"
    },
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-simplexml": "*",
        "symfony/http-client": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Villermen\\RuneScape\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Villermen\\RuneScape\\Test\\": "test/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.5.40"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    }
}
